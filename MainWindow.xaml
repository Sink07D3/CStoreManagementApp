<Window x:Class="StationTankManagementProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StationTankManagementProject"
        mc:Ignorable="d"
        Title="Home" Height="720" Width="1280">
    <Grid>
        <Menu Margin="10,10,10,673">
            <Button x:Name="buttonAddStore" Content="Add Store"/>
            <Button x:Name="buttonSearchStores" Content="Search Stores"/>
            <Button x:Name="buttonCreateTagOrder" Content="Create Tag Order"/>
        </Menu>
        <Label Name="labelStoreNumber" Content="Store number: " HorizontalAlignment="Left" Margin="35,65,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelStoreAddress" Content="Store Address: " HorizontalAlignment="Left" Margin="35,96,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelStoreState" Content="State: " HorizontalAlignment="Left" Margin="35,127,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelStoreShipDate" Content="Ship Date: " HorizontalAlignment="Left" Margin="35,158,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelStorePONumber" Content="PO Number: " HorizontalAlignment="Left" Margin="35,189,0,0" VerticalAlignment="Top"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="700,59,10,10"/>

    </Grid>
</Window>
